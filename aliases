if [ "$SHELL" = "/usr/bin/fish" ] || [ "$SHELL" = "/bin/fish" ]; then
    abbr gs "git status"
    abbr ga "git add"
    abbr gm "git commit -m"
    abbr dc "docker-compose"
    abbr dps "docker ps"
    abbr dls "docker container ls"
    abbr pa "php artisan"
    abbr pat "php artisan tinker"
    abbr pam "php artisan migrate"
    abbr nrd "npm run dev"
    abbr nrb "npm run build"
else
    alias gs="git status"
    alias ga="git add"
    alias gm="git commit -m"
    alias dc="docker-compose"
    alias dps="docker ps"
    alias dls="docker container ls"
    alias pa="php artisan"
    alias pat="php artisan tinker"
    alias pam="php artisan migrate"
    alias nrd="npm run dev"
    alias nrb="npm run build"
fi